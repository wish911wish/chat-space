.main
  .main__group
    .group-name
      = group.name
    .group-member
      %span Members:
      %ul.group-members
        - group.users.each do |user|
          %li.group-mem
            = user.name
    .group-edit
      = link_to "Edit",edit_group_path(group)
  .main__messages
    - messages.each do |message|
      .message
        .message__data
          %span.message__user
            = message.user.name
          %span.message__date
            = message.created_at
        .message__text
          = message.content
        = image_tag message.image()

  .main__send
    = form_for Message.new, url: {action: :index} do |f|
      .input-area
        .input-area__text
          = f.text_field :content, class: "text-box", placeholder: "type a message"
          = f.label :image do
            = fa_icon 'image'
            = f.file_field :image, class: "image-form"
        = f.submit "Send", class: "input-area__button"



